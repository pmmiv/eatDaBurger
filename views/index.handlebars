<div class="col-6" id="left">
  <h2>Fresh Burgers</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}

        <li>
          {{burger_name}}

          <button class="devour btn btn-danger" data-id="{{id}}">Devour
          </button>

        </li>

      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-6" id="right">
  <h2>Burgers you've eaten</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}

        <li>
          {{burger_name}}

        </li>
      
      {{/if}}
    {{/each}}
  </ul>
</div> 

<div class="col-12" id="bottom">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="name">Burger Name:</label>
      <input type="text" id="name" name="name">
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </div>

  </form>
</div>